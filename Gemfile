source "https://rubygems.org"

gem "jekyll", "~> 4.0.0"

group :jekyll_plugins do
  gem 'jekyll-archives'
  gem 'jekyll-tidy'
  gem 'jekyll-toc'

  # ============================================================================
  # As Github Pages does not (yet) support Jekyll 4, all plugins are listed.
  # Once it does the long list below can be replaced by this:
  # ----------------------------------------------------------------------------
  # gem 'github-pages'
  # gem 'github-pages-unscramble'
  # ----------------------------------------------------------------------------
  gem 'jekyll-avatar'
  gem 'jekyll-coffeescript'
  gem 'jekyll-commonmark-ghpages'
  # gem 'jekyll-default-layout' <-- Not yet compatible with Jekyll 4
  gem 'jekyll-feed'
  gem 'jekyll-gist'
  gem 'jekyll-github-metadata'
  gem 'jekyll-mentions'
  gem 'jekyll-optional-front-matter'
  gem 'jekyll-paginate'
  gem 'jekyll-readme-index'
  gem 'jekyll-redirect-from'
  gem 'jekyll-relative-links'
  gem 'jekyll-remote-theme'
  gem 'jekyll-sass-converter'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-theme-primer'
  gem 'jekyll-titles-from-headings'
  gem 'jemoji'
  # ============================================================================
end
